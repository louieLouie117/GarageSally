@model DashboardWrapper

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/landingPage.css">
    <script src="~/js/loginReg.js" async=""></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>


    <title>Garage Sally</title>
    <meta name="author" content="Garage Sally">
    <meta name="description"
        content="Garage Sally helps people post and find garage sales. Create a free account and start posting and finding garage sales.">
    <meta name="keywords"
        content="garage sales, garage, sales, garage sales near me, garage sales app, garage sales website, Garage Sally">
    <link rel="shortcut icon" type="imgage/png" href="~/img/Assets/favIcon.png" />

