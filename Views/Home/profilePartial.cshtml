@using UserLogin.Models
@* @model List<User> *@
@model User

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
</head>

<body>
    <div class="profile-container" id="profile">
        <button onclick="profile()"> &lt; back</button>
        <h1>Hello @ViewBag.ToDisplay.FirstName</h1>
        <img src="~/img/uploads/@ViewBag.ToDisplay.ProfilePic" alt="">

        @if (Model.AccountType == 0)
            {
                <partial name="BuyerProfilePartial" model="@Model" view-data="ViewData" />
            }
            else
            {
                <partial name="SellerProfilePartial" model="@Model" view-data="ViewData" />
            }

    </div>



</body>

</html>